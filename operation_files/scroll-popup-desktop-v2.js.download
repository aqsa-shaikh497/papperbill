document.addEventListener('scroll', function() {
    const scrollPercentage = 100 * $(window).scrollTop() / ($(document).height() - $(window).height());
    if (((scrollPercentage > 50 || $(document).height() - $(window).scrollTop() < 900) && !scrollPopupShown) && window.innerWidth > 600) {
        $('.modal').modal('hide');
        $('#scroll-popup-desktop').modal('show');
        scrollPopupShown = true;
    }
})
const callButton = document.getElementById('call-button');
callButton.addEventListener('click', () => {
    const phoneNumber = document.getElementById('phone-desktop').value;
    if (phoneNumber && (phoneNumber.length === 10) && phoneCheck.test(phoneNumber)) {
        userDetails.phone_number = phoneNumber;
        userDetails.pageName = window.location.pathname;
        userDetails.userDeviceDetails = navigator.userAgent;
        userDetails.sourceName = '50% scroll popup';
        document.getElementById('error_message_desktop_popup').style.display = "none";
        storeUserData(userDetails);
		startDownload('50% scroll popup');
        $('.desktop-popup-container').hide();
        $('.success-container').show();
				$('.container desktop-popup-container').hide();
				$('#scroll-btn-modal-container-desktop').css('background-image', 'url("https://vyaparwebsiteimages.vypcdn.in/scroll-popup-step-1.webp")');
    } else {
        document.getElementById('error_message_desktop_popup').style.display = "block";
    }
})