let flag = true;
$(function() {
    $('[data-toggle="tooltip"]').tooltip()
})

function dwnldDesktopApplication(campaignId) {
    const urlParams = new URLSearchParams(window.location.search);
    const refQueryParam = urlParams.get('referrer_code');
    const campaignQueryParam = urlParams.get('campaign_id');
    let link = document.createElement('a');
    if (refQueryParam) {
        referrerCode = refQueryParam;
        link.href = 'https://vyaparapp.in/desktop/download?referrer_code=' + referrerCode;
    } else if (campaignQueryParam) {
        campaignId = campaignQueryParam;
        link.href = 'https://vyaparapp.in/desktop/download?campaign_id=' + campaignId;
    } else {
        campaignId = $('#campaignId').attr('data-campaignId');
        link.href = 'https://vyaparapp.in/desktop/download?campaign_id=' + campaignId;
    }
    link.dispatchEvent(new MouseEvent('click'));
    $('.close.desk-dwn').click();
};

function leaveFromTop(e) {
    if ($(window).width() > 1024) {
        if (e.clientY < 0 && flag) {
            flag = false;
          	$('.modal').modal('hide');
            $('#exit-popup').modal('show');
        }
    }
}
$(document).on('mouseleave', leaveFromTop);